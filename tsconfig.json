{
  "compilerOptions": {
    "lib": [
      "dom",
      "es7"
    ],
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": [ "./*" ],
      "test/*": ["./test/*"]
    },
    "types": [
      "webdriverio",
      "node",
      "cucumber"
    ]
  },
  "include": [
    "./test/**/*.ts",
    "./config/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compileOnSave": false
}
