{
  "compilerOptions": {
    "lib": [
      "dom",
      "es7"
    ],
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": [ "./*" ],
      "test/*": ["./test/*"]
    },
    "types": [
      "webdriverio/sync",
      "expect-webdriverio",
      "node",
      "@wdio/cucumber-framework"
    ]
  },
  "include": [
    "./test/**/*.ts",
    "./config/**/*.ts",
    "node_modules/webdriverio/async.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compileOnSave": false
}
